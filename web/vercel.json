{
  "name": "trek-tribe-web",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "installCommand": "npm install",
  "framework": "create-react-app",
  "env": {
    "REACT_APP_API_URL": "https://trek-tribe-38in.onrender.com",
    "REACT_APP_SOCKET_URL": "https://trek-tribe-38in.onrender.com",
    "REACT_APP_AI_SERVICE_URL": "https://trek-tribe-ai-service.onrender.com",
    "REACT_APP_APP_NAME": "Trek Tribe",
    "REACT_APP_VERSION": "1.0.0",
    "GENERATE_SOURCEMAP": "false"
  },
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/favicon.ico",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Content-Type", "value": "image/x-icon" }
      ]
    },
    {
      "source": "/favicon.svg",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Content-Type", "value": "image/svg+xml; charset=utf-8" }
      ]
    },
    {
      "source": "/favicon-32x32.png",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" },
        { "key": "Content-Type", "value": "image/png" }
      ]
    },
    {
      "source": "/(logo|manifest).(png|svg|json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
