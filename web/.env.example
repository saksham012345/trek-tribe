# Trek Tribe Web Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration - Update this with your deployed API URL
REACT_APP_API_URL=https://trek-tribe-38in.onrender.com

# App Configuration
REACT_APP_APP_NAME=Trek Tribe
REACT_APP_VERSION=1.0.0

# Build Configuration for Production
GENERATE_SOURCEMAP=false
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

# For Vercel Production Deployment:
# Set REACT_APP_API_URL to your deployed API URL in Vercel dashboard
# Example: REACT_APP_API_URL=https://your-api-domain.vercel.app
# Or if using Render: REACT_APP_API_URL=https://trek-tribe-api.onrender.com

# Socket.IO Configuration (for real-time features)
REACT_APP_SOCKET_URL=https://trek-tribe-38in.onrender.com

# Google OAuth Configuration
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Feature Flags
REACT_APP_ENABLE_REAL_TIME_CHAT=true
REACT_APP_ENABLE_AI_SUPPORT=true
REACT_APP_ENABLE_QR_PAYMENTS=true
