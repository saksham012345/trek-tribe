# RAG System Configuration Template
# Copy this to .env and configure for your environment

# AI Models
EMBEDDING_MODEL=all-MiniLM-L6-v2
GENERATION_MODEL=gpt2-large

# Data Storage
RAG_DATA_DIR=./rag_data

# Device Configuration
DEVICE=auto  # Options: auto, cuda, cpu

# Server Configuration
PORT=8001
WORKERS=1

# Security - Set these for production
RAG_API_KEY=your-secret-api-key-here
RAG_ADMIN_KEY=your-admin-key-here

# Logging
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000,https://trekktribe.onrender.com,https://trek-tribe-frontend.vercel.app

# Query Configuration
DEFAULT_TOP_K=3
MAX_GENERATION_LENGTH=200
MAX_CONTEXT_LENGTH=2000

# Model Performance
BATCH_SIZE=32
NUM_THREADS=4
