# Trekk Tribe Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=4000
# API base URL for file uploads (used in production)
API_URL=https://trek-tribe-38in.onrender.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/trekktribe

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret key (REQUIRED: minimum 32 characters for production)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_here

# Razorpay keys (payments + Route)
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
PLATFORM_COMMISSION_RATE=5
ENCRYPTION_KEY=32_character_aes_key_for_bank_data

# Session secret for express-session
SESSION_SECRET=your_session_secret_here

# ===========================================
# EMAIL SERVICE (Gmail SMTP)
# ===========================================
# Gmail account credentials for sending emails
GMAIL_USER=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# ===========================================
# WHATSAPP SERVICE
# ===========================================
# WhatsApp Web.js configuration (optional)
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
# AI Service URL and API key for chat widget
# If not set, chat widget will use built-in fallback responses
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_KEY=your-random-secret-key-here

# Production AI service (if deployed on Render):
# AI_SERVICE_URL=https://trek-tribe-ai.onrender.com
# AI_SERVICE_KEY=your-random-secret-key-here

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL for CORS and redirects
# Development:
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
REACT_APP_RAZORPAY_KEY_ID=rzp_test_xxxxx

# Production (uncomment for Render/production deployment):
# FRONTEND_URL=https://www.trektribe.in
# CORS_ORIGIN=https://www.trektribe.in
# SOCKET_ORIGIN=https://www.trektribe.in

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_DIR=./logs

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# ===========================================
# PRODUCTION OVERRIDES (For Render.com)
# ===========================================
# Uncomment and configure for production deployment

# NODE_ENV=production
# PORT=10000  # Render uses this port
# API_URL=https://trek-tribe-38in.onrender.com
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trekktribe
# JWT_SECRET=your_production_jwt_secret_min_32_chars
# GMAIL_USER=your_email@gmail.com
# GMAIL_APP_PASSWORD=your_gmail_app_password
# FRONTEND_URL=https://www.trektribe.in
# CORS_ORIGIN=https://www.trektribe.in
# SOCKET_ORIGIN=https://www.trektribe.in

# Note: The backend CORS is already configured to accept:
# - https://www.trektribe.in
# - https://trektribe.in
# - https://trek-tribe-38in.onrender.com
# You can add more domains via FRONTEND_URL or CORS_ORIGIN env vars
