{
  "name": "trekk-tribe",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up --build",
    "dev:api": "cd services/api && npm run dev",
    "dev:web": "cd web && npm start",
    "build": "docker-compose build",
    "build:api": "cd services/api && npm run build",
    "build:web": "cd web && npm run build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v",
    "install:all": "npm install && cd services/api && npm install && cd ../../web && npm install",
    "vercel:api": "cd services/api && vercel",
    "vercel:web": "cd web && vercel",
    "vercel:deploy": "npm run build:api && npm run build:web",
    "render:prepare": "npm run build:api && npm run build:web",
    "render:setup-db": "cd services/api && npm run setup:db"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
