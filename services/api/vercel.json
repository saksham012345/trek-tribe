{
  "version": 2,
  "name": "trek-tribe-api",
  "builds": [
    {
      "src": "dist/serverless.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/serverless.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/serverless.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "ALLOWED_ORIGINS": "*"
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "functions": {
    "dist/serverless.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "regions": ["iad1"]
}
