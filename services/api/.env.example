# Trek Tribe API Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trek-tribe?retryWrites=true&w=majority

# Use in-memory database for development (optional)
USE_MEM_DB=false

# ============================================
# JWT AUTHENTICATION
# ============================================
# Secret key for JWT token signing (minimum 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this-in-production

# Token expiry (e.g., '7d', '30d', '90d')
JWT_EXPIRY=30d

# ============================================
# FIREBASE STORAGE (Required for File Uploads)
# ============================================
# Get these from Firebase Console > Project Settings > General
FIREBASE_API_KEY=AIzaSyD...
FIREBASE_AUTH_DOMAIN=trek-tribe.firebaseapp.com
FIREBASE_PROJECT_ID=trek-tribe
FIREBASE_STORAGE_BUCKET=trek-tribe.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abc123def456
FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# RAZORPAY PAYMENT GATEWAY
# ============================================
# Test credentials (for development)
RAZORPAY_KEY_ID=rzp_test_RprUwM1vPIM49e
RAZORPAY_KEY_SECRET=J0qz50Bw0jzv6LK9G0jdN3cF

# Production credentials
# RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXX
# RAZORPAY_KEY_SECRET=your_live_secret_key

# Payment configuration
ENABLE_RAZORPAY_ROUTING=false
MIN_TRUST_SCORE_FOR_ROUTING=70

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Gmail SMTP (for sending emails)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Trek Tribe <noreply@trektribe.com>

# Disable email in development
DISABLE_EMAIL=true

# ============================================
# GOOGLE OAUTH
# ============================================
# Get from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# Production callback URL
# GOOGLE_CALLBACK_URL=https://your-api-domain.com/auth/google/callback

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# AI service URL
AI_SERVICE_URL=http://localhost:5000
# Production: AI_SERVICE_URL=https://ai-service-g3rs.onrender.com

# AI service API key (must match AI service env)
AI_SERVICE_KEY=5YDVAJioLzl0wq0u1r4X9na6ypPkZpiQeEUynHaDMo0=

# ============================================
# WHATSAPP BUSINESS API (Optional)
# ============================================
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://trektribe.in

# ============================================
# SOCKET.IO CONFIGURATION
# ============================================
# Enable real-time features
ENABLE_SOCKET_IO=true

# ============================================
# REDIS (Optional - for caching & sessions)
# ============================================
# Redis connection URL
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# ============================================
# CLOUDINARY (Alternative to Firebase)
# ============================================================================
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# SECURITY
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session secret
SESSION_SECRET=your-session-secret-min-32-chars

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_ID_VERIFICATION=true
ENABLE_TRUST_SCORE=true
ENABLE_AI_CHAT=true
ENABLE_WHATSAPP_NOTIFICATIONS=false

# ============================================
# DEPLOYMENT (Render.com Ready)
# ============================================
# Copy these for production deployment:
#
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://...
# JWT_SECRET=your-production-secret
# FIREBASE_API_KEY=...
# FIREBASE_STORAGE_BUCKET=...
# RAZORPAY_KEY_ID=rzp_live_...
# RAZORPAY_KEY_SECRET=...
# EMAIL_USER=...
# EMAIL_PASSWORD=...
# GOOGLE_CLIENT_ID=...
# GOOGLE_CLIENT_SECRET=...
# AI_SERVICE_URL=https://ai-service-g3rs.onrender.com
# AI_SERVICE_KEY=5YDVAJioLzl0wq0u1r4X9na6ypPkZpiQeEUynHaDMo0=
# CORS_ORIGINS=https://trektribe.in
