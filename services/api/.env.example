# Trek Tribe API Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (Use MongoDB Atlas for production)
MONGODB_URI=mongodb://127.0.0.1:27017/trekktribe
# Production: MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/trekktribe

# JWT Secret - IMPORTANT: Generate a secure secret for production!
# You can generate one using: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# Production: Add your frontend domain
# ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Frontend URL for CORS (Production)
# FRONTEND_URL=https://your-frontend-domain.vercel.app

# Log Level
LOG_LEVEL=info

# WhatsApp Integration
# WhatsApp Web.js will create QR code for authentication
# No credentials needed for WhatsApp Web.js - just scan QR code once
WHATSAPP_ENABLED=true
# Optional: Default country code for phone number formatting
DEFAULT_COUNTRY_CODE=91

# Gmail SMTP Configuration for Email Service
# To set up Gmail SMTP:
# 1. Enable 2-factor authentication on your Gmail account
# 2. Generate an App Password: https://support.google.com/accounts/answer/185833
# 3. Use your Gmail address as GMAIL_USER
# 4. Use the generated App Password (not your regular password) as GMAIL_APP_PASSWORD
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Twilio SMS Configuration for Phone Verification
# To set up Twilio:
# 1. Sign up at https://www.twilio.com/try-twilio (get $15 free credit)
# 2. Get your Account SID and Auth Token from Twilio Console
# 3. Purchase a phone number from Twilio Console
# 4. Add these credentials below
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Razorpay Payment Gateway Configuration
# To set up Razorpay:
# 1. Sign up at https://razorpay.com
# 2. Get your Key ID and Key Secret from Dashboard → Settings → API Keys
# 3. Set up webhooks at Dashboard → Settings → Webhooks
# 4. Add webhook URL: https://your-domain.com/api/webhooks/razorpay
# 5. Copy the webhook secret
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# Frontend URL (for email templates and redirects)
FRONTEND_URL=http://localhost:3000
# Production: FRONTEND_URL=https://trek-tribe.com

# Preset User Credentials (for development/testing only)
# Override default admin credentials
PRESET_ADMIN_NAME=Root Admin
PRESET_ADMIN_EMAIL=trektribe_root@trektribe.in
PRESET_ADMIN_PHONE=+919999999999
PRESET_ADMIN_PASSWORD=Saksham@4700

# Override default agent credentials
PRESET_AGENT_NAME=Saksham Taneja
PRESET_AGENT_EMAIL=tanejasaksham44@gmail.com
PRESET_AGENT_PHONE=+919999999998
PRESET_AGENT_PASSWORD=Agent@9800

# Render-specific environment variables
# PORT is automatically set by Render (usually 10000)
# For local development, use 4000

# Render Production URLs (update these with your actual Render service URLs)
# FRONTEND_URL=https://trek-tribe-web.onrender.com
