# Trek Tribe Root Environment Configuration
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb://mongo:27017/trekktribe

# JWT Secret - IMPORTANT: Generate a secure random secret for production!
# You can generate one using: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production

# Node Environment
NODE_ENV=development

# API Configuration
API_PORT=4000

# Web Configuration
WEB_PORT=3000

# Database for local development (when not using Docker)
MONGODB_URI_LOCAL=mongodb://127.0.0.1:27017/trekktribe